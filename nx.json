{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultProject": "web",
  "plugins": [
    {
      "plugin": "@nx/js",
      "options": {
        "compiler": "tsc"
      }
    }
  ],
  "targetDefaults": {
    "build": {
      "cache": true,
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["production", "^production"]
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  }
}